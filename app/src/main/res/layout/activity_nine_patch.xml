    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
    android:layout_marginLeft="100dp"
        android:layout_weight="10"
        android:background="@android:color/white"
        android:src="@drawable/nomail"/>


</LinearLayout>
